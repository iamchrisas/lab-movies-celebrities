<h2>Edit Movie</h2>

<form action="/movies/{{movie._id}}/edit" method="post">
  <label for="title">Title:</label>
  <input type="text" name="title" value="{{movie.title}}" required>

  <label for="genre">Genre:</label>
  <input type="text" name="genre" value="{{movie.genre}}">

  <label for="plot">Plot:</label>
  <input type="text" name="plot" value="{{movie.plot}}">

  <label for="cast">Cast:</label>
  <select name="cast" multiple>
    {{#each celebrities}}
      <option value="{{this._id}}" {{#if (this.id movie.cast.ids)}} selected {{/if}}>{{this.name}}</option>
    {{/each}}
  </select>

  <button type="submit">Update Movie</button>
</form>
