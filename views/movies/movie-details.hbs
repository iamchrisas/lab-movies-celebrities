<h2>{{movie.title}}</h2>
<p>Genre: {{movie.genre}}</p>
<p>Plot: {{movie.plot}}</p>

<h3>Cast</h3>
<ul>
  {{#each movie.cast}}
    <li>Name:
      {{this.name}}, Occupation:
      {{this.occupation}}, Catch Phrase:
      {{this.catchPhrase}}</li>
  {{/each}}
</ul>

<form action="/movies/{{movie._id}}/delete" method="post">
  <button type="submit">Delete Movie</button>
</form>